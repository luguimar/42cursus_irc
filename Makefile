################################################################################
#                                     CONFIG                                   #
################################################################################

NAME		:=  ircserv
CC		:= c++
FLAGS		:= -Wall -Wextra -Werror -std=c++98
CR		:= clear

################################################################################x
#                                 PROGRAM'S SRCS                               #
################################################################################

SRCS     := main.cpp Server.cpp Client.cpp Channel.cpp

OBJS     := ${SRCS:.cpp=.o}

.cpp.o:
	${CC} ${FLAGS} -c $< -o ${<:.cpp=.o}

################################################################################
#                                  Makefile  objs                              #
################################################################################

${NAME}:	$(OBJS)
			${CC} ${FLAGS} -o $@ $^


all:		${NAME}

bonus:		all

clean:
			${RM} ${OBJS}

fclean:		clean
			${RM} ${NAME}

re:			fclean all

.PHONY:		all clean fclean re


